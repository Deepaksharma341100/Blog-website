<%= layout("./boilerplate.ejs") %>
<div class="navbar">
  <a href="/home">Home</a>
  <a href="/new">Create Blog</a>
  <a href="/register">Register</a>
  <a href="/login">Login</a>
</div>

<div class="my">
  <form action="/login" method="POST" class="blog-form">
    <h2>Login</h2>
    <div class="form-group">
      <label for="username" class="newlabel">Username</label>
      <input type="text" name="username" id="username" required />
    </div>
    <div class="form-group">
      <label for="password" class="newlabel">Password</label>
      <input type="text" name="password" id="password" required />
    </div>
    <div class="form-group">
      <label for="email" class="newlabel">Email</label>
      <input name="email" id="email" required />
    </div>

    <button type="submit" class="submit-btn">Submit</button>
  </form>
</div>
