<%= layout("./boilerplate.ejs") %>
<div class="navbar">
  <a href="/home">Home</a>
  <a href="/register">Register</a>
  <a href="/login">Login</a>
</div>

<div class="my">
  <form
    action="/register"
    method="POST"
    enctype="multipart/form-data"
    class="blog-form"
  >
    <h2>Register</h2>
    <div class="form-group">
      <label for="username" class="newlabel">Username</label>
      <input type="text" name="username" id="username" required />
    </div>
    <div class="form-group">
      <label for="password" class="newlabel">Password</label>
      <input type="text" name="password" id="password" required />
    </div>
    <div class="form-group">
      <label for="email" class="newlabel">Email</label>
      <input name="email" id="email" required />
    </div>
    <div class="form-group">
      <label for="bio" class="newlabel">Bio</label>
      <input name="bio" id="bio" required />
    </div>
    <div class="form-group">
      <label for="address" class="newlabel">Address</label>
      <input name="address" id="address" required />
    </div>
    <div class="form-group">
      <label for="profile photo">Profile photo</label>
      <input type="file" id="image" name="image" accept="image/*" />
    </div>
    <button type="submit" class="submit-btn">Submit</button>
  </form>
</div>

<!-- in image name=image it should be same in backend upload.single("image")-->
