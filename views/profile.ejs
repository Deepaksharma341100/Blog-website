<%= layout("./boilerplate.ejs"),{title:"user profile" , page:"profile page"} %>
<div class="navbar">
  <a href="/home">Home</a>
  <a href="/new">Create Blog</a>
  <a href="/logout">Logout</a>
</div>

<div class="container">
  <center><h4>User Details</h4></center>
</div>

<div class="card">
  <div class="card-title">
    <img
      width="200"
      height="200"
      style="border-radius: 45px"
      src="<%=u.image %>"
    />
  </div>
  <div class="card-body">
    <h2>Hello, <%= u.username %></h2>
    <h6>Email: <%= u.email %></h6>
    <h6>your bio:<%= u.bio %></h6>
    <h6>your address:<%= u.address %></h6>
  </div>
</div>
